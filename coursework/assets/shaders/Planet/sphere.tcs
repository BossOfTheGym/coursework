#version 430 core

#define ID gl_InvocationID


layout(vertices = 3) out;

in dvec3 vsPosition[];
in dvec3 vsColor[];
in dvec2 vsTex[];

out dvec3 tcsPosition[];
out dvec3 tcsColor[];
out dvec2 tcsTex[];


void main()
{
	tcsPosition[ID] = vsPosition[ID];
	tcsColor[ID]    = vsColor[ID];
	tcsTex[ID]      = vsTex[ID];

	if(ID == 0)
	{
		gl_TessLevelOuter[0] = 1.0;
 		gl_TessLevelOuter[1] = 1.0;
 		gl_TessLevelOuter[2] = 1.0;
 
 		gl_TessLevelInner[0] = 1.0;
 	}
}