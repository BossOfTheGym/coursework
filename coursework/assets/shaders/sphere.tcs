#version 430 core

#define ID gl_InvocationID


layout(vertices = 3) out;

in vec3 vsPosition[];
in vec3 vsColor[];
in vec2 vsTex[];

out vec3 tcsPosition[];
out vec3 tcsColor[];
out vec2 tcsTex[];

void main()
{
	tcsPosition[ID] = vsPosition[ID];
	tcsColor[ID]    = vsColor[ID];
	tcsTex[ID]      = vsTex[ID];

	if(ID == 0)
	{
		gl_TessLevelOuter[0] = 8.0;
 		gl_TessLevelOuter[1] = 8.0;
 		gl_TessLevelOuter[2] = 8.0;
 
 		gl_TessLevelInner[0] = 8.0;
 	}
}